<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, class: 'form-control mb-3', placeholder: 'Email' %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control mb-3', placeholder: 'Password' %>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit 'Sign in', class: 'btn btn-primary btn-block mt-3' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
