<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.email_field :email, autofocus: true, class: 'form-control mb-2', placeholder: 'Email' %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control mb-2', placeholder: 'Password' %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control mb-2', placeholder: 'Confirm Password' %>
        <%= f.text_field :phone_number, autocomplete: 'off', class: 'form-control mb-2', placeholder: 'Phone Number' %>

        <%= f.submit 'Sign up', class: 'btn btn-primary btn-block mt-3' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>